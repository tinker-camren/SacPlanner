@page
@model Sacrament_Planner.Pages.Plans.EditModel

@{
    ViewData["Title"] = "Edit";
}

<script>
    function addFields(elementID, linkID) {
        var x = document.getElementById(elementID);
        var y = document.getElementById(linkID);
        if (x.style.display === "none") {
            x.style.display = "block";
            y.innerHTML = "Hide Speaker"
        } else {
            x.style.display = "none";
            y.innerHTML = "Show Speaker"
        }
    }
    function showLink(linkID) {
        var y = document.getElementById(linkID);
        if (y.style.display === "none") {
            y.style.display = "block";
        }
    }
</script>

    <div class="card" style="max-width: 400px; margin: 2rem auto;">
        <div class="card-body">
            <h1>Edit</h1>

            <h4>Sacrament Plan</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Sacrament_Plan.ID" />
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.MeetingDate" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.MeetingDate" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.MeetingDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.ConductingLeader" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.ConductingLeader" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.ConductingLeader" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.OpeningSong" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.OpeningSong" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.OpeningSong" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.SacramentHymn" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.SacramentHymn" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.SacramentHymn" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.ClosingSong" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.ClosingSong" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.ClosingSong" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.MusicalNumber" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.MusicalNumber" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.MusicalNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.IntermediateHymn" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.IntermediateHymn" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.IntermediateHymn" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.OpeningPrayer" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.OpeningPrayer" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.OpeningPrayer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sacrament_Plan.ClosingPrayer" class="control-label"></label>
                            <input asp-for="Sacrament_Plan.ClosingPrayer" class="form-control" />
                            <span asp-validation-for="Sacrament_Plan.ClosingPrayer" class="text-danger"></span>
                        </div>
                        @for (var i = 0; i < (Model.Sacrament_Plan.Speakers.Count()); i++)
                        {
                            <input type="hidden" asp-for="Sacrament_Plan.Speakers[i].ID" />
                            <div class="form-group">
                                <label asp-for="Sacrament_Plan.Speakers[i].Name" class="control-label"></label>
                                <input asp-for="Sacrament_Plan.Speakers[i].Name" class="form-control" />
                                <span asp-validation-for="Sacrament_Plan.Speakers[i].Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Sacrament_Plan.Speakers[i].Subject" class="control-label"></label>
                                <input asp-for="Sacrament_Plan.Speakers[i].Subject" class="form-control" />
                                <span asp-validation-for="Sacrament_Plan.Speakers[i].Subject" class="text-danger"></span>
                            </div>
                        }

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="./Index">Back to List</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </div>

